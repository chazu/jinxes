{
    "styles":
    [
        {
            "name": "redBlue",
            "bgColor": "blue",
            "fgColor": "red"
        },
        {
            "name": "redBlueFocus",
            "bgColor": "blue",
            "fgColor": "red",
            "reverse": true
        },
        {
            "name": "greenBlack",
            "bgColor": "black",
            "fgColor": "green"
        }
    ],
    "app":
    {
        "name": "console",
        "network": true,
        "height": 25,
        "width": 101,
        "remoteMessageHooks": [],
        "keyHooks":
        [
            {
                "key": "q",
                "func": "quitApp"
            },
            {
                "key": "\t",
                "func": "incrementAppFocus"
            }
        ]
    },
    "widgets":
    [
        {
            "name": "Console",
            "contents": {
                "type": "lines",
                "text": "",
                "style": "greenBlack"
            },
            "height": 23,
            "width": 100,
            "scroll": {
                "scroll": true
            },
            "anchor": [0, 0],
            "remoteMessageHooks": [
                {
                    "channel": "rcon",
                    "func": "appendBodyToTextBuffer"
                }
            ],
            "localMessageHooks": [
                {
                    "channel": "command",
                    "func": "printLocalCommandAsLine"
                }
            ],
            "focusedKeyHooks": [
                {
                    "key": "ALL",
                    "func": "appendKeyToTextBuffer"
                }
            ]
        },
        {
            "name": "Input",
            "contents": {
                "type": "text",
                "text": "",
                "style": "greenBlack"
            },
            "height": 1,
            "width": 100,
            "anchor": [0, 23],
            "keyHooks": [],
            "focusedKeyHooks": [
                {
                    "key": "\r",
                    "func": "sendLocalCommand"
                },
                {
                    "key": "ALL",
                    "func": "appendKeyToTextBuffer"
                }
            ],
            "remoteMessageHooks": []
        }
    ]
}
